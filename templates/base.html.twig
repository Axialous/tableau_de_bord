<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <meta name="viewport" content="width=device-width, initial=1.0">
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
        <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" defer></script>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script src="{{ asset('assets/js/scripts.js') }}" defer></script>

    </head>
    <body>
        <header class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('tableau_de_bord') }}"><h1>Tableau de bord</h1></a>
                <nav class=""collapse navbar-collapse>
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('achats') }}">Liste des achats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('ajout_achat') }}">Ajouter un achat</a>
                        </li>
                        {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('inscription') }}">Inscription</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('connexion') }}">Connexion</a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </header>
        <main>
            {% block main %}{% endblock %}
        </main>
    </body>
</html>
