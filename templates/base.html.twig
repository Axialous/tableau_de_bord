<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/logo.svg') }}">
        
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial=1.0">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        
        <script src="{{ asset('assets/js/scripts.js') }}" defer></script>
        <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" defer></script>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </head>
    <body>
        <header>
            <a href="{{ path('tableau_de_bord') }}"><img src="{{ asset('images/logo.svg') }}" alt="Logo"><h1>Tableau de bord</h1></a>
            <nav>
                {% if app.user %}
                    <a href="{{ path('achats') }}">Liste des achats</a>
                    <a href="{{ path('ajout_achat') }}">Ajouter un achat</a>
                    <a href="{{ path('statistiques') }}">Statistiques</a>
                    <a href="{{ path('inscription') }}">Ajouter un utilisateur</a>
                    <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                {% else %}
                    <a href="{{ path('connexion') }}">Connexion</a>
                {% endif %}
                </ul>
            </nav>
        </header>
        <main>
            {% block main %}{% endblock %}
        </main>
    </body>
</html>
