{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
    <section>
        <figure>
            <figcaption>
                <h1>Connexion</h1>
            </figcaption>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                    <p>Vous êtes connecté comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a></p>
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label class="form-label required" for="inputEmail">E-mail</label>
                    <input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                </div>

                <div class="mb-3">
                    <label class="form-label required" for="inputPassword">Mot de passe</label>
                    <input class="form-control" type="password" name="password" id="inputPassword" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <button class="btn btn-lg btn-primary mt-3" type="submit">Connexion</button>
                <br>
                <a href="{{path('app_forgot_password_request')}}">Mot de passe oublié</a>
            </form>
        </figure>
    </section>
{% endblock %}
